<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs', title) %>
  </head>
  <body>
    <!-- Navbar -->
    <%- include('../partials/nav.ejs') %>

    <!-- Content -->
    <div class="container mt-3">
      <div class="row">
        <div class="col-md-3">

          <%- include('../partials/category-menu.ejs', {categories, selectedid}) %>

        </div>
        <div class="col-md-9">
          <h1 class="h3">Anasayfa</h1>

          <% if (typeof message != "undefined") { %>
            <div class="alert alert-<%= message.class %>"><%= message.text %></div>
          <% } %>

          <% if (blogs == 0) { %>
            <%- include('../partials/empty-page.ejs') %>
           <% } %>

          <% blogs.forEach(blog => { %>

          <% if (blog.homepage && blog.approved) { %>

            <%- include('../partials/blog-card.ejs', {blog: blog}) %>

          <% } %>

          <% }) %>
        </div>
      </div>
    </div>

    <!-- Bootstrap scriptleri -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
