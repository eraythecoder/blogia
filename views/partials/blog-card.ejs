<div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img
          src="/static/images/<%= blog.image %>"
          alt=""
          class="img-fluid"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><a href="/blogs/<%= blog._id %>" class="text-decoration-none text-black"><%= blog.title %></a></h5>
          <p class="card-text"><%= blog.description.slice(0,300) + (blog.description.length > 300 ? "..." : "" ) %></p>
        </div>
      </div>
    </div>
  </div>